<h1>Listing product_informations</h1>

<table>
  <tr>
    <th>Brand</th>
    <th>Model</th>
    <th>Serial number</th>
  </tr>

<% @product_informations.each do |product_information| %>
  <tr>
    <td><%=h product_information.brand %></td>
    <td><%=h product_information.model %></td>
    <td><%=h product_information.serial_number %></td>
    <td><%= link_to 'Show', product_information %></td>
    <td><%= link_to 'Edit', edit_product_information_path(product_information) %></td>
    <td><%= link_to 'Destroy', product_information, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product_information', new_product_information_path %>